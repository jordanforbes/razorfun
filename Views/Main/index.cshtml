<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
    </head>
    <body>
        @{
            var StringList = new List<string>
            {
                "Apple Pie",
                "Burritos",
                "Clams Casino",
                "Donuts"
            };

            <h1>Here are some delicious foods!</h1>
            foreach(var word in StringList)
            {
                
                @if(word == "Clams Casino")
                {
                    <p style = "Color:Red">@word</p>
                }else{
                    <p>@word</p>
                }
            }
        }
    </body>
</html>